{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "ES2015",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@src/utils/*": ["src/utils/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}